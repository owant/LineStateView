<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:div="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.owant.linestateview.MainActivity">

    <com.owant.linestateview.view.LineStateView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        div:lineGradeSize="8" />

    <com.owant.linestateview.view.LineStateView
        android:id="@+id/main_lsv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" />


    <com.owant.linestateview.view.LineStateView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        div:lineColor="@color/colorPrimaryDark"
        div:lineGradeSize="4"
        div:lineStateColor="#f00" />

    <com.owant.linestateview.view.LineStateView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        div:lineColor="@color/colorAccent"
        div:lineGradeSize="3"
        div:lineStateColor="#f00" />

    <com.owant.linestateview.view.LineStateView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        div:lineColor="@color/colorPrimaryDark"
        div:lineGradeSize="2"
        div:lineStateColor="#0f0" />

</LinearLayout>
